{{#foreach posts}}
  <article id="{{id}}" class="post-preview">
    <a href="{{url}}">
      <h2 class="post-title">
        {{{title}}}
      </h2>
      <section class="post-subtitle">
        {{excerpt}}
      </section>
    </a>

    {{#author}}
      <p class="post-meta">Posted by <a href="{{url}}">{{name}}</a> on {{date format="MMMM DD, YYYY"}}</p>
    {{/author}}
  </article>
  <hr>
{{/foreach}}