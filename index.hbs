{{!< default}}

<header class="intro-header" {{#if @blog.cover}}style="background:no-repeat center center;background-image:url({{@blog.cover}})"{{/if}}>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>{{@blog.title}}</h1>
          <hr class="small">
          <span class="subheading">{{@blog.description}}</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{> "posts-list"}}
      {{pagination}}
    </div>
  </div>
</div>